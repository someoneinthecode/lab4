using System;
using System.Collections.Generic;

class Дорога
{
    public double Довжина { get; set; }
    public double Ширина { get; set; }
    public int КількістьСмуг { get; set; }
    public int РівеньТрафіку { get; set; }
}

enum ТипТранспорту
{
    Автомобіль,
    Вантажівка,
    Автобус
}

class ТранспортнийЗасіб : IDriveable
{
    public double Швидкість { get; set; }
    public double Розмір { get; set; }
    public ТипТранспорту Тип { get; set; }

    public void Рухатися()
    {
        Console.WriteLine($"Транспортний засіб типу {Тип} рухається зі швидкістю {Швидкість} км/год.");
    }

    public void Зупинитися()
    {
        Console.WriteLine($"Транспортний засіб типу {Тип} зупиняється.");
    }
}

interface IDriveable
{
    void Рухатися();
    void Зупинитися();
}

class СимуляціяРуху
{
    public void СимулюватиРух(ТранспортнийЗасіб транспорт, Дорога дорога)
    {
        Console.WriteLine($"Транспортний засіб типу {транспорт.Тип} рухається на дорозі довжиною {дорога.Довжина} км.");
        транспорт.Рухатися();
    }
}

class Program
{
    static void Main()
    {
        Дорога дорога = new Дорога
        {
            Довжина = 10.0,
            Ширина = 2.5,
            КількістьСмуг = 2,
            РівеньТрафіку = 3
        };

        ТранспортнийЗасіб автомобіль = new ТранспортнийЗасіб
        {
            Швидкість = 60,
            Розмір = 4.5,
            Тип = ТипТранспорту.Автомобіль
        };

        СимуляціяРуху симулятор = new СимуляціяРуху();
        симулятор.СимулюватиРух(автомобіль, дорога);

        Console.ReadLine();
    }
}
